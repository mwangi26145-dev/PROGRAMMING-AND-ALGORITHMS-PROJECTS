#include <stdio.h>

float convertToCelsius(float fahrenheit) {
    float celsius;
    celsius = (fahrenheit - 32) * 5.0 / 9.0;  // Correct formula
    return celsius;
}

int main() {
    float fahrenheit;
    printf("Enter temperature in Fahrenheit: ");
    scanf("%f", &fahrenheit);

    printf("Temperature in Celsius: %.2fÂ°C\n", convertToCelsius(fahrenheit));

    return 0;
}
