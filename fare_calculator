#include <stdio.h>

float calculateFare(float distance) {
    float fare;
    fare = distance * 50;  // Fare rate: KSh. 50 per kilometer
    return fare;
}

// Example usage
int main() {
    float distance;
    printf("Enter distance traveled (in km): ");
    scanf("%f", &distance);

    printf("Total fare: KSh. %.2f\n", calculateFare(distance));

    return 0;
}
